{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=spectra_db;Username=postgres;Password=postgres;Port=5432",
    "ProductionConnection": "Host=your-azure-postgres-server.postgres.database.azure.com;Database=spectra_db;Username=your-username;Password=your-password;Port=5432;SSL Mode=Require"
  },
  "Jwt": {
    "SecretKey": "YourSuperSecretKeyThatIsAtLeast32CharactersLong!",
    "Issuer": "Spectra.Api",
    "Audience": "Spectra.Client",
    "ExpirationMinutes": "60"
  }
}
